@model IEnumerable<Koob.Dominio.Libro>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Libros";
}
 <script type="text/javascript" src="@Url.Content("~/Scripts/custom/Deseo.js")"></script> 
<h2>Libros Disponibles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.lib_isbn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lib_descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.usu_email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cat_codigo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.lib_isbn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lib_descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.usu_email)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.lib_codigo)
            @Html.DisplayFor(modelItem => item.cat_codigo)
        </td>
@if (Request.IsAuthenticated)
{
        <td>
             
            <input id="usu_email" type="hidden" value=@User.Identity.Name />
            <button type="button" class="btn btn-default btn-sm" onclick="EnviarDatos()">
                <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
            </button>
            <div id="CuerpoMensaje">
                <div id="mensaje"></div>    
            </div>
        </td>
}
