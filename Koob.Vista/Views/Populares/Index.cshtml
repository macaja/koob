@model IEnumerable<Koob.Dominio.Libro>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Populares";

}
<h2>Libros populares</h2>
<div style="display:block">
    <ol class="list-group">

        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <div class="row">
                    <div class="col-xs-6 col-md-3">
                        <a href="@Url.Action("Details", "Libro", new { id = item.lib_codigo })" class="thumbnail">
                            <img src=@("http://"+item.lib_imagen) alt=@item.lib_titulo>
                        </a>
                    </div>
                    <div>
                        <h2> @Html.DisplayFor(modelItem => item.lib_titulo)</h2>
                        <h4>@Html.DisplayFor(modelItem => item.lib_autores)</h4>
                        <h4><a href="/Usuario/Libros/?email=@item.usu_email">@Html.DisplayFor(modelItem => item.usu_email)</a></h4>
                        <h4>@Html.DisplayFor(modelItem => item.lib_catNombre)</h4>
                    </div>


                </div>
            </li>
        }

    </ol>
</div>
