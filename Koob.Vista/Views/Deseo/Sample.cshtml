@model IEnumerable<Koob.Dominio.Libro>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Lista de Deseos";

}
<script type="text/javascript" src="@Url.Content("~/Scripts/custom/Deseo.js")"></script>
<h2>Lista de Deseos</h2>

<ol class="list-group">

    @foreach (var item in Model)
    {
            <li>
                <div>
                    <div class="col-xs-6 col-md-3">
                        <a href="#" class="thumbnail">
                            <img src="..." alt="...">
                        </a>
                    </div>
                    <p> @Html.DisplayFor(modelItem => item.lib_isbn)</p>
                    <p>@Html.DisplayFor(modelItem => item.lib_descripcion)</p>
                    <p>@Html.ActionLink(@Html.DisplayFor(modelItem => item.usu_email).ToString(), "usuario", "Deseo", new { email = item.usu_email }, null)</p>
                    <p>Html.DisplayFor(modelItem => item.lib_catNombre)</p>
     
                        @if (Request.IsAuthenticated && item.usu_email != User.Identity.Name)
                        {
                            <p>

                                <input id="usu_email" type="hidden" value=@User.Identity.Name />
                                <button type="button" class="btn btn-default btn-sm" onclick="EnviarDatos(@item.lib_codigo)">
                                    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                                </button>
                                <div id="CuerpoMensaje">
                                    <div id="mensaje"></div>
                                </div>
                            </p>
                            
                        }
                    
                </div>
            </li>
    }

</ol>
